<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- "Morning Mist" Design System Colors - Synced with Palette Preview -->

    <!-- Core Palette -->
    <Color x:Key="MistBackgroundLight">#FAF9F6</Color>
    <Color x:Key="MistSurfaceLight">#FFFFFF</Color>
    <Color x:Key="MistPrimaryLight">#7986CB</Color>
    <Color x:Key="MistTextPrimaryLight">#37474F</Color>
    <Color x:Key="MistTextSecondaryLight">#78909C</Color>

    <Color x:Key="MistBackgroundDark">#263238</Color>
    <Color x:Key="MistSurfaceDark">#37474F</Color>
    <Color x:Key="MistPrimaryDark">#9FA8DA</Color>
    <Color x:Key="MistTextPrimaryDark">#ECEFF1</Color>
    <Color x:Key="MistTextSecondaryDark">#B0BEC5</Color>

    <!-- Semantic Accents -->
    <Color x:Key="UpliftAccent">#F48FB1</Color>
    <Color x:Key="VibeAccent">#FFCC80</Color> <!-- Sun-Kissed Apricot -->
    <Color x:Key="ShareAccent">#80CBC4</Color>

    <!-- On-Accent Text Colors (for contrast) -->
    <Color x:Key="OnVibeLight">#3E2723</Color>
    <Color x:Key="OnPrimaryDark">#263238</Color>
    <Color x:Key="OnUpliftDark">#3E2723</Color>
    <Color x:Key="OnShareDark">#004D40</Color>

    <!-- Generic Helpers -->
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>

    <!-- Semantic Brushes (Adaptive) -->
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="{AppThemeBinding Light={StaticResource MistBackgroundLight}, Dark={StaticResource MistBackgroundDark}}" />
    <SolidColorBrush x:Key="AppSurfaceBrush" Color="{AppThemeBinding Light={StaticResource MistSurfaceLight}, Dark={StaticResource MistSurfaceDark}}" />
    <SolidColorBrush x:Key="PrimaryBrush" Color="{AppThemeBinding Light={StaticResource MistPrimaryLight}, Dark={StaticResource MistPrimaryDark}}" />
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{AppThemeBinding Light={StaticResource MistTextPrimaryLight}, Dark={StaticResource MistTextPrimaryDark}}" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{AppThemeBinding Light={StaticResource MistTextSecondaryLight}, Dark={StaticResource MistTextSecondaryDark}}" />

    <SolidColorBrush x:Key="UpliftBrush" Color="{StaticResource UpliftAccent}" />
    <SolidColorBrush x:Key="VibeBrush" Color="{StaticResource VibeAccent}" />
    <SolidColorBrush x:Key="ShareBrush" Color="{StaticResource ShareAccent}" />

</ResourceDictionary>