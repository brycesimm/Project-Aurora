<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Global Shadows -->
    <Shadow x:Key="MistShadow"
            Offset="0,4"
            Radius="10"
            Opacity="0.1"
            Brush="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Black}}" />

    <Style TargetType="ActivityIndicator">
        <Setter Property="Color" Value="{StaticResource MistPrimaryLight}" />
    </Style>

    <!-- Base Border Style (Cards) -->
    <Style TargetType="Border">
        <Setter Property="Stroke" Value="Transparent" />
        <Setter Property="StrokeShape" Value="RoundRectangle 16"/>
        <Setter Property="StrokeThickness" Value="0"/>
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource MistSurfaceLight}, Dark={StaticResource MistSurfaceDark}}" />
        <Setter Property="Shadow" Value="{StaticResource MistShadow}" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OnPrimaryDark}}" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource MistPrimaryLight}, Dark={StaticResource MistPrimaryDark}}" />
        <Setter Property="FontFamily" Value="Nunito"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="CornerRadius" Value="24"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="MinimumHeightRequest" Value="36"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="{StaticResource Gray500}" />
                            <Setter Property="BackgroundColor" Value="{StaticResource Gray200}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- Typography -->
    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource MistTextPrimaryLight}, Dark={StaticResource MistTextPrimaryDark}}" />
        <Setter Property="FontFamily" Value="Nunito" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style TargetType="Label" x:Key="DisplayTitle">
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="18" /> <!-- Reduced to match preview card title -->
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource MistTextPrimaryLight}, Dark={StaticResource MistTextPrimaryDark}}" />
    </Style>

    <Style TargetType="Label" x:Key="Heading1">
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="20" />
    </Style>

    <Style TargetType="Label" x:Key="Body1">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="LineHeight" Value="1.5" />
    </Style>

    <Style TargetType="Label" x:Key="Body2">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource MistTextSecondaryLight}, Dark={StaticResource MistTextSecondaryDark}}" />
    </Style>

    <Style TargetType="Label" x:Key="TagLabel">
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextColor" Value="{StaticResource OnVibeLight}" />
    </Style>

    <!-- Shell/Navigation Styling -->
    <Style TargetType="Shell" ApplyToDerivedTypes="True">
        <Setter Property="Shell.BackgroundColor" Value="{AppThemeBinding Light={StaticResource MistBackgroundLight}, Dark={StaticResource MistBackgroundDark}}" />
        <Setter Property="Shell.ForegroundColor" Value="{AppThemeBinding Light={StaticResource MistTextPrimaryLight}, Dark={StaticResource MistTextPrimaryDark}}" />
        <Setter Property="Shell.TitleColor" Value="{AppThemeBinding Light={StaticResource MistTextPrimaryLight}, Dark={StaticResource MistTextPrimaryDark}}" />
        <Setter Property="Shell.NavBarHasShadow" Value="False" />
    </Style>

    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource MistBackgroundLight}, Dark={StaticResource MistBackgroundDark}}" />
    </Style>

</ResourceDictionary>